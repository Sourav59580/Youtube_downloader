    <script>
        $(document).ready(function () {
            $(".url-from").submit(function (e) {
                e.preventDefault();
                $(".video-container").removeClass("d-none");
                var url = $("#url").val();
                $.ajax({
                    method: "POST",
                    url: "/video360",
                    data: {
                        url: url
                    },
                    beforeSend: function () {
                        $("tfoot").removeClass('d-none');
                    },
                    success: function (response) {
                        $("tfoot").addClass('d-none');
                        $(".video360").removeClass("d-none");
                        $(".v360").attr("href", response);

                        $.ajax({
                            method: "POST",
                            url: "/video720",
                            data: {
                                url: url
                            },
                            beforeSend: function () {
                                $("tfoot").removeClass('d-none');
                            },
                            success: function (response) {
                                $("tfoot").addClass('d-none');
                                $(".video720").removeClass("d-none");
                                $(".v720").attr("href", response);
                            }
                        })

                        $.ajax({
                            method: "POST",
                            url: "/audio144",
                            data: {
                                url: url
                            },
                            beforeSend: function () {
                                $("tfoot").removeClass('d-none');
                            },
                            success: function (response) {
                                $("tfoot").addClass('d-none');
                                $(".audio").removeClass("d-none");
                                $(".a144").attr("href", response);
                            }
                        })
                    }
                })
            })
        });
